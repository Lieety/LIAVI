// /prisma/schema.prisma

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // Aquest camp guardar√† el hash de la contrasenya
  name      String?
  role      Role     @default(FREE) // Per a futures subscripcions de pagament
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  FREE
  PREMIUM
  ADMIN
}